OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx
# Modèle (par défaut: gpt-5.2)
OPENAI_MODEL=gpt-5.2
# GPT-5.2: température possible seulement avec reasoning effort = none
OPENAI_REASONING_EFFORT=none
OPENAI_TEMPERATURE=0.3
# Limite de sortie (Responses API)
OPENAI_MAX_OUTPUT_TOKENS=900

# -----------------------------
# Sécurité admin (optionnel)
# -----------------------------
# Token d'accès au dashboard /admin (si vide, pas de protection)
ADMIN_DASHBOARD_TOKEN=changez-moi
# Alias legacy (facultatif) :
# ADMIN_API_TOKEN=changez-moi

# Historique utilisateur (optionnel)
USER_HISTORY_TOKEN=

# Fuseau horaire (utile pour logs)
TZ=Europe/Paris
